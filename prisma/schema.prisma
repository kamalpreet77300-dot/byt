// This is your Prisma schema file
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  password      String
  role          UserRole      @default(USER)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  enrollments   Enrollment[]
  applications  Application[]
  purchases     Purchase[]
  payments      Payment[]
}

enum UserRole {
  USER
  ADMIN
}

model Service {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  shortDesc   String
  description String   @db.Text
  icon        String?
  color       String?
  techStack   String[]
  process     Json?
  caseStudies Json?
  pricing     Json?
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Course {
  id              String       @id @default(cuid())
  slug            String       @unique
  title           String
  description     String       @db.Text
  category        String
  duration        String
  mode            String       // online, offline, hybrid
  price           Int
  discountPrice   Int?
  syllabus        Json?
  projects        Json?
  certificate     Boolean      @default(true)
  placementAssist Boolean      @default(true)
  instructor      String?
  rating          Float        @default(0)
  studentsCount   Int          @default(0)
  thumbnail       String?
  published       Boolean      @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  enrollments     Enrollment[]
}

model Enrollment {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  status      EnrollmentStatus @default(PENDING)
  paymentId   String?
  enrolledAt  DateTime @default(now())
  completedAt DateTime?
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
}

enum EnrollmentStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
}

model Job {
  id           String        @id @default(cuid())
  title        String
  type         JobType
  location     String
  description  String        @db.Text
  requirements String[]
  skills       String[]
  salary       String?
  experience   String
  published    Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  applications Application[]
}

enum JobType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
  FRESHER
  CONTRACT
}

model Application {
  id          String   @id @default(cuid())
  userId      String
  jobId       String
  resume      String
  coverLetter String?  @db.Text
  portfolio   String?
  status      ApplicationStatus @default(PENDING)
  appliedAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  @@unique([userId, jobId])
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  SHORTLISTED
  REJECTED
  ACCEPTED
}

model Project {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  description String     @db.Text
  category    String
  features    String[]
  techStack   String[]
  price       Int
  screenshots String[]
  demoUrl     String?
  sourceCode  Boolean    @default(true)
  documentation Boolean  @default(true)
  support     Boolean    @default(false)
  published   Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  purchases   Purchase[]
}

model Purchase {
  id          String   @id @default(cuid())
  userId      String
  projectId   String
  paymentId   String?
  amount      Int
  status      PurchaseStatus @default(PENDING)
  purchasedAt DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@unique([userId, projectId])
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  amount        Int
  currency      String   @default("INR")
  paymentMethod String
  paymentId     String?  @unique
  orderId       String?
  status        PaymentStatus @default(PENDING)
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  company   String
  image     String?
  rating    Int      @default(5)
  text      String   @db.Text
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
